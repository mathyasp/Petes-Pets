extends layout

block content
    
  .row.justify-content-center
    .col-sm-6
      legend New Pet
      form(action="#" id="new-pet", method="post")
        .form-group
            label Name
            span.required *
            input.form-control(name="name" required)
        .form-group
            label Birthday
            span.required *
            input.form-control(name="birthday" required)
        .form-group
            label Species
            span.required *
            input.form-control(name="species" required)
        .form-group
            label Avatar
            span.required *
            input.form-control(name="avatar" type="file" required)  
        .form-group
            label Favorite Food
            span.required *
            input.form-control(name="favoriteFood" required)
        .form-group
            label Description
            span.required *
            textarea.form-control(name="description" required minlength="140")
        .form-group
            label Price
            span.required *
            textarea.form-control(name="price" required type="number")
        button(type="submit").btn.btn-primary Save